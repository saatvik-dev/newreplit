{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "regions": ["bru1"],
  "functions": {
    "api/*.js": {
      "memory": 128,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/health", "dest": "/api/health.js" },
    { "src": "/api/contact", "dest": "/api/contact.js" },
    { "src": "/api/subscribe", "dest": "/api/subscribe.js" },
    { "src": "/api/(.*)", "dest": "/api.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}